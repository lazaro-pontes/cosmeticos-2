{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"  // Conjunto de regras padrão do ESLint
  ],
  "parserOptions": {
    "ecmaVersion": 12,   // Versão do ECMAScript (2021)
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],             // Exige ponto e vírgula
    "quotes": ["error", "double"],          // Exige aspas duplas
    "no-console": "off"                     // Permite console.log()
  }
}
